
.guideContentList {
	margin-top: 30rpx;
}
.guideContentScroll {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	white-space: nowrap;
}
.guideContent-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: inline-block;
	margin-right: 40rpx;
	background-color: #f8f8f8;
}
.guideContent-image {
	position: relative;
}
.guideContent-image image {
	width: 320rpx;
	height: 220rpx;
	border-radius: 8rpx;
}
.guideContent-image text {
	color: #FFFFFF;
	background-color: #333333;
	font-size: 34rpx;
	position: absolute;
	bottom: -10rpx;
	left: 10rpx;
}
.guideContent-text {
	margin-top: 10rpx;
	margin-left: 10rpx;
}
.guideContent-user image {
	width: 48rpx;
	height: 48rpx;
	border-radius: 50%;
	margin-right: 30rpx;
	vertical-align: middle;
}
.guideContent-user text {
	vertical-align: middle;
	font-size: 28rpx;
	color: #999999;
}

