
.scenicContainer {
	width: 100%;
	margin: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	height: auto;
}
.scenicLeft,
.scenicRight {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-flow: column wrap;
	        flex-flow: column wrap;
	width: 100%;
}
.sceniceContent {
	display: inline-block;
	width: 334rpx;
	border-radius: 20rpx;
	overflow: hidden;
	box-shadow: 0 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.1);
	background: rgba(255, 255, 255, 1);
	margin-top: 16rpx;
	margin-right: 16rpx;
}
.sceniceContentOdd {
	margin-right: 0;
}
.sceniceBg {
	width: 100%;
	height: 336rpx;
}
.sceniceInfo {
	margin: 0 16rpx;
	font-size: 28rpx;
	margin-top: 8rpx;
}
.sceniceText {
	width: 100%;
	color: rgba(51, 51, 51, 1);
	overflow: hidden;
	word-break: break-all;
	/* break-all(允许在单词内换行。) */
	text-overflow: ellipsis;
	/* 超出部分省略号 */
	display: -webkit-box;
	/** 对象作为伸缩盒子模型显示 **/
	-webkit-box-orient: vertical;
	/** 设置或检索伸缩盒对象的子元素的排列方式 **/
	-webkit-line-clamp: 2;
	/** 显示的行数 **/
}
.sceniceInformation {
	margin-top: 10rpx;
	width: 100%;
	font-size: 24rpx;
}
.sceniceInformation .start {
	display: inline-block;
	width: 136rpx;
	vertical-align: middle;
}
.sceniceInformation text {
	color: rgba(102, 102, 102, 1);
	vertical-align: middle;
}
.sceniceDistance {
	color: rgba(153, 153, 153, 1);
	vertical-align: middle;
	margin-left: 32rpx;
}
.sceniceComment {
	margin-top: 8rpx;
}
.score {
	color: rgba(248, 67, 67, 1);
}
.comment {
	font-size: 24rpx;
	color: rgba(102, 102, 102, 1);
	margin-left: 16rpx;
}
.serciveUser {
	margin: 14rpx 0;
	border-top: 1px solid rgba(0, 0, 0, 0.04);
	padding-top: 16rpx;
	/* display: flex; */
	position: relative;
}
.userAvatar {
	display: inline-block;
	width: 52rpx;
	height: 52rpx;
	border-radius: 50%;
	overflow: hidden;
	vertical-align: middle;
}
.serciveUser view {
	display: inline-block;
	height: 52rpx;
	width: 246rpx;
	font-size: 20rpx;
	color: rgba(102, 102, 102, 1);
	vertical-align: middle;
	margin-left: 4rpx;
}
.userText {
	width: 100%;
	vertical-align: middle;
	margin-left: 4rpx;
	overflow: hidden;
	word-break: break-all;
	/* break-all(允许在单词内换行。) */
	text-overflow: ellipsis;
	/* 超出部分省略号 */
	display: -webkit-box;
	/** 对象作为伸缩盒子模型显示 **/
	-webkit-box-orient: vertical;
	/** 设置或检索伸缩盒对象的子元素的排列方式 **/
	-webkit-line-clamp: 2;
	/** 显示的行数 **/
}

