
.categoryContainer {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	white-space: nowrap;
}
.category-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
	display: inline-block;
	margin: 0 20rpx 0 32rpx;
}
