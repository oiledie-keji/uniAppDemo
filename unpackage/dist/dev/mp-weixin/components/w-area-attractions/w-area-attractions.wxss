
.areaContent {
	position: relative;
	border-radius: 20rpx;
	width: 216rpx;
	height: 216rpx;
	overflow: hidden;
}
.areaMask, .areaContent image, .areaInfo {
	width: 100%;
	height: 100%;
}
.areaMask,
.areaInfo {
	position: absolute;
	top: 0;
	left: 0;
}
.areaMask {
	background:rgba(0,0,0,0.29);
}
.areaInfo {
	color: #FFFFFF;
	font-weight: 600;
	font-weight: 600;
	text-align: center;
}
.areaInfo > view {
	width: 100%;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
}
.areaInfo_zn {
	font-size: 32rpx;
}
.line {
	width: 104rpx;
	height: 1px;
	background-color: #FFFFFF;
	margin: 4rpx auto;
}
.areaInfo_en {
	font-size: 24rpx;
}
.routesInfo {
	margin: 0 16rpx 8rpx;
}
.routesTitle {
	color: #333333;
	font-size: 28rpx;
	width: 100%;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.routesUserAvatar {
	width: 44rpx;
	height: 44rpx;
	border-radius: 50%;
	vertical-align: middle;
}
.routesText {
	font-size: 24rpx;
	color: #999999;
}

