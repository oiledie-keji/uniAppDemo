
.profileHeader {
	background-color: #FAAD14;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 170rpx;
	padding: 12rpx 30rpx;
	color: #fff;
}

/* 头像 */
.avatar {
	vertical-align: middle;
}
.avatar image {
	/* width: 100%; */
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
	background-color: #f2f2f2;
}

/* 登陆/注册 */
.login-info {
	vertical-align: middle;
	margin-left: 30rpx;
}
.login {
	font-size: 36rpx;
	margin-top: 18rpx;
}
.phone {
	font-size: 28rpx;
	margin-top: 10rpx;
}
.phone image {
	width: 30rpx;
	height: 30rpx;
	vertical-align: middle;
	position: relative;
	bottom: 4rpx;
}

/* 箭头 */
.arrow {
	position: absolute;
	right: 30rpx;
	margin-top: 30rpx;
}
.arrow image {
	width: 60rpx;
	height: 60rpx;
}

