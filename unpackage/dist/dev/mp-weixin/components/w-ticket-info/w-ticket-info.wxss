
.ticketInfo {
	padding: 32rpx 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	border-bottom: 1px solid rgba(0, 0, 0, 0.04);
}
.ticketType {
	width: 50%;
}
.ticketType view {
	font-size: 28rpx;
	color: rgba(51, 51, 51, 1);
}
.ticketType text {
	border-radius: 10rpx;
	font-size: 20rpx;
	border: 1px solid rgba(187, 187, 187, 1);
	color: rgba(187, 187, 187, 1);
	display: inline-block;
	padding: 4rpx 16rpx;
	margin-top: 6rpx;
}
.ticketAction {
	width: 50%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: reverse;
	-webkit-flex-direction: row-reverse;
	        flex-direction: row-reverse;
}
.ticketPrice {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.ticketPrice .price {
	font-size: 24rpx;
	font-weight: 600;
	color: rgba(250, 79, 29, 1);
}
.ticketPrice .price text {
	font-size: 28rpx;
}
.ticketPrice .ticketCount {
	font-size: 20rpx;
	color: rgba(102, 102, 102, 1);
}
.ticketBtn {
	margin-left: 16rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.ticketBtn button {
	width: 116rpx;
	height: 44rpx;
	font-size: 28rpx;
	font-weight: 500;
	color: rgba(255, 255, 255, 1);
	line-height: 44rpx;
	background-color: rgba(250, 79, 29, 1);
	border-radius: 20rpx;
	border: none;
}

