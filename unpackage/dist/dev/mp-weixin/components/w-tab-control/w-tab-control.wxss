
.popRoutesContent {
	height: 102rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	white-space: nowrap;
}
.popRoutes-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
	display: inline-block;
	width: 126rpx;
	height: 92rpx;
	background-color: #F6F7F8;
	border-radius: 10rpx;
	margin: 0 16rpx;
	position: relative;
}
.popRoutes-item:first-child {
	margin-left: 32rpx;
}
.popRoutes-item text {
	width: 100%;
	display: block;
	font-size: 20rpx;
	color: #666666;
}
.popRoutes-item .title {
	margin-top: 12rpx;
	font-size: 28rpx;
	color: #525353;
}
.popRoutes-item.active {
	background-color: #FAAD14;
}
.popRoutes-item.active text {
	color: rgba(51, 51, 51, 0.9);
	font-weight: 500;
}
.popRoutes-item.active text.title {
	color: rgba(51, 51, 51, 0.9);
	font-weight: 500;
}
.triangle-down {
	width: 0;
	height: 0;
	border-left: 26rpx solid transparent;
	border-right: 26rpx solid transparent;
	border-top: 20rpx solid #FAAD14;
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}

